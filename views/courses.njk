{% extends "layout.njk" %}

{% block head %}

    <title>Conte√∫dos - Desafio 3-1: Primeiro servidor</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock %}

{% block content %}

    <h1>Cursos Rocketseat</h1>

    <div class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <img src="{{item.img_url}}" alt="Imagem de {{item.name}}">
                <div class="card_info">
                    <h2>{{item.name}}</h2>
                    <h3>{{item.modules}}s</h3>
                    <h4>{{item.price}}</h4>
                </div>
            </div>
        {% endfor %}
    </div>

<div class="modal-overlay">
    <div class="modal">
        <div class="modal-buttons">
            <a class="maximize-modal">
                <i class="material-icons">fullscreen</i>
            </a>
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
        </div>

        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>

<script src="scripts.js"></script>

{% endblock %}